inicio

int fatorial ;
int cont ;

escreva ( "Digite o valor para calcular o fatorial:" ) ;
leia ( fatorial ) ;
 
fatorial -> cont ;

se ( fatorial = 0 )
escreva ( "O fatorial de 0 eh 0" ) ;

senao
cont -> cont - 1 ;
faca ( 
    fatorial -> fatorial * cont ; 
    cont -- ;
) ate cont > 0 ;
fimse

escreva ( fatorial ) ;

fim
